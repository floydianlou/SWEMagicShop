<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="GUI.controller.UserRegistrationController"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10" padding="20">

    <!-- Titolo in alto (opzionale) -->
    <Label text="Welcome to Otari's Magic Shop!"
           style="-fx-font-size: 24; -fx-font-weight: bold;"
           GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" />

    <!-- Sottotitolo (opzionale) -->
    <Label text="Register"
           style="-fx-font-size: 18; -fx-font-weight: bold;"
           GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" />

    <!-- Nome -->
    <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="nameField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <!-- Cognome -->
    <Label text="Surname:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="surnameField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <!-- Email -->
    <Label text="Email Address:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <!-- Password -->
    <Label text="Password:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <!-- EtÃ  -->
    <Label text="Age:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextField fx:id="ageField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <!-- Telefono -->
    <Label text="Phone Number:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <TextField fx:id="phoneField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

    <!-- Specie -->
    <Label text="Species:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
    <ComboBox fx:id="speciesComboBox" GridPane.rowIndex="8" GridPane.columnIndex="1" />

    <!-- Pulsante Registrazione -->
    <Button text="Register" fx:id="registerButton"
            onAction="#handleRegistration"
            style="-fx-font-weight: bold; -fx-background-color: #7C44C2; -fx-text-fill: white;"
            GridPane.rowIndex="9" GridPane.columnIndex="1" />

</GridPane>
