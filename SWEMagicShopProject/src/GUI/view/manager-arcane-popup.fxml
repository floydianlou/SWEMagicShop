<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="GUI.controller.ManagerArcanePopup"
           alignment="TOP_LEFT"  stylesheets="@../styles/popup-styles.css, @../styles/cart-styles.css"
           prefWidth="800" prefHeight="700"  styleClass="arcane-popup-root">

    <VBox spacing="16" alignment="TOP_LEFT" maxWidth="740"
          StackPane.alignment="CENTER"
          styleClass="popup-root">

        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label fx:id="titleLabel" styleClass="popup-title"/>
        </HBox>

        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="130"/>
                <ColumnConstraints halignment="LEFT"  hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Request ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="requestID" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="popup-message-text"/>

            <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="statusLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="popup-message-text"/>

            <Label text="Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="dateLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="popup-message-text"/>
        </GridPane>

        <VBox spacing="10" styleClass="info-card">
            <Label text="Customer details" styleClass="section-title"/>

            <GridPane hgap="10" vgap="6">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="130"/>
                    <ColumnConstraints halignment="LEFT"  hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Name:"     GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="customerName"    GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:"    GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="customerEmail"   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Age:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="customerAge" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Phone:"    GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="customerPhone"   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Species:"  GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label fx:id="customerSpecies" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="rejectButton" text="Reject" onAction="#handleReject"
                    styleClass="popup-close-button"/>
            <Button fx:id="approveButton" text="Approve" onAction="#handleApprove"
                    styleClass="popup-close-button"/>
        </HBox>

        <HBox alignment="CENTER">
            <Button fx:id="backButton"
                    onAction="#handleClosePopup"
                    styleClass="popup-close-button"/>
        </HBox>

    </VBox>
</StackPane>