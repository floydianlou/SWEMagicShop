<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="GUI.controller.OrderHistoryController"
           stylesheets="@../styles/cart-styles.css"
           style="-fx-padding: 40;">

    <VBox spacing="20" alignment="TOP_CENTER">

        <HBox alignment="CENTER" spacing="15">
            <ImageView fx:id="moonIcon"
                       fitHeight="50" fitWidth="50"
                       preserveRatio="true"
                       pickOnBounds="true"/>

            <Label text="Order History" styleClass="cart-title"/>

            <ImageView fx:id="reversedMoonIcon"
                       fitHeight="50" fitWidth="50"
                       preserveRatio="true"
                       pickOnBounds="true"/>
        </HBox>

        <VBox styleClass="cart-box" maxWidth="900" prefHeight="600" spacing="15" alignment="TOP_CENTER">

            <HBox style="-fx-padding: 16 0 0 20;">
                <Label text="Your past orders:" styleClass="cart-text"/>
            </HBox>

            <ScrollPane fitToWidth="true" prefHeight="550">
                <VBox fx:id="ordersContainer" spacing="15" alignment="TOP_LEFT" prefWidth="680">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </VBox>
            </ScrollPane>

        </VBox>
    </VBox>
</StackPane>
