<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="GUI.controller.ManagerArcaneViewController"
      alignment="TOP_CENTER" spacing="30" stylesheets="@../styles/cart-styles.css, @../styles/arcane-styles.css"
      style="-fx-padding: 40;">

    <VBox spacing="20" alignment="TOP_CENTER">

    <HBox alignment="CENTER" spacing="15">
        <ImageView fx:id="arcaneItem"
                   fitHeight="50" fitWidth="50"
                   preserveRatio="true"
                   pickOnBounds="true"/>

        <Label text="Manage Arcane Membership Requests" styleClass="cart-title"/>

        <ImageView fx:id="reversedArcaneItem"
                   fitHeight="50" fitWidth="50"
                   preserveRatio="true"
                   pickOnBounds="true"/>
    </HBox>

    <Label text="Approve or refuse requests made by customers here." styleClass="arcane-subtitle"/>

        <HBox fx:id="outerContentBox"
              alignment="TOP_CENTER"
              prefWidth="700"
              prefHeight="850"
              styleClass="arcane-container">

            <VBox fx:id="pendingBox"
                  alignment="TOP_CENTER"
                  spacing="20"
                  prefHeight="850"
                  prefWidth="700"
                  maxWidth="700"
                  minWidth="700"
                  styleClass="column-box">

                <Label text="Pending requests" styleClass="arcane-subtitle"/>

                <ScrollPane fx:id="pendingScrollPane"
                            fitToWidth="true"
                            hbarPolicy="NEVER"
                            vbarPolicy="AS_NEEDED"
                            prefHeight="850"
                            maxHeight="850"
                            prefWidth="700"
                            maxWidth="700"
                            styleClass="faq-scroll">
                    <VBox fx:id="pendingList" spacing="12"/>
                </ScrollPane>
            </VBox>


            <Separator orientation="VERTICAL" prefHeight="300"/>

            <VBox fx:id="handledBox" alignment="TOP_CENTER" spacing="10">

                <Label text="All requests:" styleClass="arcane-subtitle"/>

                <ScrollPane fx:id="handledScrollPane"
                            fitToWidth="true"
                            hbarPolicy="NEVER"
                            vbarPolicy="AS_NEEDED"
                            prefHeight="850"
                            maxHeight="850"
                            prefWidth="700"
                            maxWidth="700"
                            styleClass="faq-scroll">
                    <VBox fx:id="handledList" spacing="12"/>
                </ScrollPane>
            </VBox>

        </HBox>
</VBox>
</VBox>