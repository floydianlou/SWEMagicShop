<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="GUI.controller.ItemEditController"
      stylesheets="@../styles/styles.css"
      spacing="10" alignment="CENTER">

    <Label text="Edit Item" styleClass="main-title"/>

    <TextField fx:id="itemNameField" promptText="Item Name" styleClass="input-field"/>
    <TextField fx:id="itemPriceField" promptText="Item Price" styleClass="input-field"/>

    <Label fx:id="errorLabel" styleClass="error-label"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#handleSave" styleClass="choice-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="choice-button"/>
    </HBox>
</VBox>