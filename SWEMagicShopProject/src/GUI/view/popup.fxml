<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.controller.PopupController"
            stylesheets="@../styles/popup-styles.css"
            styleClass="popup-root"
            prefWidth="420" prefHeight="240">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label fx:id="titleLabel" styleClass="popup-title"/>
        <TextFlow fx:id="messageLabel" styleClass="popup-message" maxWidth="320" textAlignment="CENTER" VBox.vgrow="ALWAYS"/>
        <Button fx:id="closeButton" onAction="#handleClosePopup" styleClass="popup-close-button"/>
    </VBox>

</AnchorPane>