<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.controller.ChooseRegistrationTypeController"
      alignment="CENTER" spacing="20"
      stylesheets="@../styles/styles.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Titolo -->
    <HBox alignment="CENTER" spacing="10">
        <ImageView fx:id="shopIcon" fitHeight="50" fitWidth="50"/>
        <Label text="Welcome to Otari's Magic Shop!"
               styleClass="main-title"/>
    </HBox>

    <!-- Sottotitolo -->
    <Label text="CHOOSE REGISTRATION TYPE"
           styleClass="subtitle-label"/>

    <Region prefHeight="20"/>


    <HBox alignment="CENTER" spacing="30">
        <Button text="CLIENT"
                onAction="#handleClientRegistration"
                styleClass="choice-button"
                prefWidth="150" prefHeight="60"/>
        <Button text="MANAGER"
                onAction="#handleManagerRegistration"
                styleClass="choice-button"
                prefWidth="150" prefHeight="60"/>
    </HBox>

    <Region prefHeight="30"/>

    <Button text="Back to Welcome Menu"
            onAction="#handleBackToMenu"
            styleClass="back-button"
    />
</VBox>
