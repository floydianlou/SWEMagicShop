<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../styles/styles.css"
            fx:controller="GUI.controller.ProductViewController">

    <center>
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="10" alignment="CENTER_LEFT" >
                <Label fx:id="productName"/>
                <Label fx:id="productDescription" maxWidth="1000" wrapText="true"/>
                <Label fx:id="productCategory"/>
                <Label fx:id="productArcane"/>
                <Label fx:id="productPrice"/>
                <Button text="Add to Cart" fx:id="addToCartButton" styleClass="add-to-cart-button"/>
            </VBox>

            <Region prefHeight="800"/>

            <VBox alignment="CENTER_RIGHT">
                <ImageView fx:id="productImage" fitWidth="400" fitHeight="400"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>