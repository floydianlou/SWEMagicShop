<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.controller.CustomerShopViewController"
            stylesheets="@../styles/styles.css">
    <top>
        <VBox>
            <ToolBar style="-fx-background-color: #6A1B9A; -fx-padding: 10;">
                <ComboBox fx:id="filterDropDown" HBox.hgrow="ALWAYS"/>

                <Button style="-fx-background-color: transparent;" onAction="#handleSearch">
                    <ImageView fx:id="searchIcon" fitHeight="27" fitWidth="27"/>
                </Button>
                <TextField fx:id="searchBar" promptText="Search products..." maxWidth="300"/>

                <!-- filtro per la categoria -->
                <ComboBox fx:id="filterCategory" promptText="Category" visible="false" />

                <!-- filtro per Arcane -->
                <ComboBox fx:id="filterArcane" promptText="Arcane" visible="false" />

                <!-- TextField per i prezzi -->
                <TextField fx:id="minprice" promptText="Min Price" visible="false" />
                <TextField fx:id="maxprice" promptText="Max Price" visible="false" />


                <Label text="Otari's Magic Shop" style="-fx-text-fill: white; -fx-padding: 0 10 0 0;"/>

                <Button style="-fx-background-color: transparent;" onAction="#handleCartButton">
                    <ImageView fx:id="cartIcon" fitHeight="27" fitWidth="27"/>
                </Button>

                <Button style="-fx-background-color: transparent;" onAction="#handleAccountButton">
                    <ImageView fx:id="accountIcon" fitHeight="27" fitWidth="27"/>
                </Button>

            </ToolBar>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <GridPane fx:id="gridPane" hgap="10" vgap="10" style="-fx-padding: 20;">
            </GridPane>
        </ScrollPane>
    </center>
</BorderPane>