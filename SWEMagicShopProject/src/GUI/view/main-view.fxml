<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUI.controller.MainViewController"
            stylesheets="@../styles/styles.css">

    <top>
        <HBox fx:id="toolBar" spacing="20" alignment="CENTER_LEFT" styleClass="tool-bar">

            <ImageView fx:id="shopIcon"
                       fitHeight="40" fitWidth="40"
                       preserveRatio="true"
                       pickOnBounds="true"/>

            <Label fx:id="shoplabel" text="Otari's Magic Shop"
                   styleClass="shop-label"/>

            <Region HBox.hgrow="ALWAYS"/>

        </HBox>

    </top>


    <center>
        <AnchorPane fx:id="contentArea"/>
    </center>

</BorderPane>