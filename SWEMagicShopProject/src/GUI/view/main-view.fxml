<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>

<!-- TODO complete layout and design of page and buttons, add full screen view, put fields in normal dimension, modify page design and colours -->

<VBox spacing="20" alignment="CENTER"
      style = "-fx-background-image: url('/images/shop-background.jpg'); -fx-background-size: cover;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="GUI.controller.MainViewController">

    <HBox alignment="TOP_CENTER" spacing="10">
        <ImageView fx:id="iconImageView" fitHeight="50" fitWidth="50"/>
        <Label text="Welcome to Otari's Magic Shop!"
               style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-font-family: 'Arimo'; -fx-text-fill: white;"/>
    </HBox>

    <Region prefHeight="50"/>

    <Label text="Please create an account or login to access our shop."
           style="-fx-font-size: 20px; -fx-font-style: italic; -fx-text-fill: white; -fx-font-family: Arimo"/>
    <HBox alignment="CENTER" spacing="15">
        <Button text="Login" onAction="#handleLoginButton" prefWidth="270" prefHeight="50" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-font-family: 'Arimo'; -fx-font-style: italic;"/>
        <Button text="Create account" onAction="#handleRegisterButton" prefWidth="270" prefHeight="50" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-font-family: 'Arimo'; -fx-font-style: italic;"/>
    </HBox>

</VBox>

