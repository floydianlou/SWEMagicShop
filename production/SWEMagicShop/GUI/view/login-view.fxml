<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.controller.LoginController"
            style="-fx-background-color: linear-gradient(to bottom, #D2B4DE, #8E44AD);">

    <!-- Contenitore principale -->
    <VBox alignment="CENTER" spacing="15"
          prefWidth="400" maxWidth="400"
          AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          style="-fx-padding: 30;">

        <HBox alignment="CENTER" spacing="10">
            <ImageView fx:id="shopIcon" fitHeight="50" fitWidth="50"/>
            <Label text="Welcome to Otari's Magic Shop!"
                   style="-fx-font-size: 50px; -fx-text-fill: #460E56; -fx-font-weight: bold;"/>
        </HBox>


        <HBox alignment="CENTER">
            <Rectangle width="250" height="3" fill="#460E56" arcWidth="10" arcHeight="10"/>
        </HBox>

        <Label text="LOGIN"
               style="-fx-font-size: 45px; -fx-text-fill: #460E56; -fx-font-weight: bold;"/>

        <!-- Testo guida -->
        <Label text="Enter your email and password to access our shop"
               wrapText="true" maxWidth="300"
               style="-fx-font-size: 16px; -fx-text-fill: #6C3483; -fx-font-style: italic;"/>

        <!-- Form di login -->
        <VBox spacing="15" alignment="CENTER"
              prefWidth="400" maxWidth="400"
              prefHeight="450" maxHeight="450"
              style="-fx-background-color: rgba(255, 255, 255, 0.2);
                     -fx-background-radius: 15;
                     -fx-padding: 30;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 0, 5);">

            <TextField fx:id="emailField" promptText="Email"
                       maxWidth="300"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: #6C3483;
                              -fx-text-fill: #6C3483;
                              -fx-font-size: 16px;
                              -fx-padding: 10px;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           maxWidth="300"
                           style="-fx-background-color: rgba(255, 255, 255, 0.3);
                                  -fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-border-color: #6C3483;
                                  -fx-text-fill: #6C3483;
                                  -fx-font-size: 16px;
                                  -fx-padding: 10px;"/>

            <Button text="Accedi" onAction="#handleLogin"
                    style="-fx-background-color: #6C3483;
                           -fx-background-radius: 10;
                           -fx-font-size: 18px;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 12px 20px;"/>

            <Label fx:id="errorLabel" text=""
                   style="-fx-text-fill: red; -fx-font-size: 16px;"/>

        </VBox>

        <!-- Bottone per tornare al menu principale -->
        <HBox alignment="BOTTOM_LEFT" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
            <Button text="Back to Home menu" onAction="#handleBack"
                    style="-fx-background-color: transparent;
                           -fx-border-color: transparent;
                           -fx-text-fill: #6C3483;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-padding: 8px 12px;"/>
        </HBox>

    </VBox>

</AnchorPane>