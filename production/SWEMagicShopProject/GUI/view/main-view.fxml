<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controller.MainViewController">

    <!-- TOP: Barra fissa -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #d4e7ff; -fx-padding: 10;" alignment="CENTER_LEFT">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16px;" />
            <Button text="🏠 Home" onAction="#goToHome" />
            <Button text="🧺 Carrello" onAction="#goToCart" />
            <Button text="🚪 Logout" onAction="#handleLogout" />
        </HBox>
    </top>

    <!-- CENTER: contenuto che cambia -->
    <center>
        <AnchorPane fx:id="contentArea" />
    </center>

</BorderPane>