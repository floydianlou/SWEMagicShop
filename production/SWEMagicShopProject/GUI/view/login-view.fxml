<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #2E2E2E;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="GUI.controller.LoginController">

    <Label text="Accedi al tuo account" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <Button text="Login" onAction="#handleLogin" style="-fx-font-size: 16px;"/>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>

    <Button text="Back to home" onAction="#handleBack"/>
</VBox>