<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.controller.LoginController"
            stylesheets="@../styles/styles.css">

    <VBox alignment="CENTER" spacing="15"
          prefWidth="400" maxWidth="400"
          AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          style="-fx-padding: 30;">

        <HBox alignment="CENTER" spacing="10">
            <ImageView fx:id="shopIcon" fitHeight="50" fitWidth="50"/>
            <Label text="Welcome to Otari's Magic Shop!"
                   styleClass="main-title"/>
        </HBox>


        <HBox alignment="CENTER">
            <Rectangle width="250" height="3" fill="#460E56" arcWidth="10" arcHeight="10"/>
        </HBox>

        <Label text="LOGIN"
               styleClass="subtitle-label"/>


        <Label text="Enter your email address and password to access our shop."
               wrapText="true" maxWidth="500"
               alignment="CENTER"
               styleClass="instructions-label"/>


        <VBox spacing="15" alignment="CENTER"
              prefWidth="400" maxWidth="400"
              prefHeight="450" maxHeight="450"
              styleClass="input-container">

            <HBox alignment="CENTER_LEFT" spacing="5" maxWidth="300"
                  style="-fx-background-color: rgba(255, 255, 255, 0.3);
             -fx-background-radius: 10;
             -fx-border-radius: 10;
             -fx-border-color: #6C3483;
             -fx-padding: 5px;">

                <Region prefWidth="5"/>
                <ImageView fx:id="emailIcon" fitHeight="27" fitWidth="27"/>
                <TextField fx:id="emailField" promptText="example@gmail.com"
                           maxWidth="260"
                           styleClass="input-field"/>
            </HBox>


            <HBox alignment="CENTER_LEFT" spacing="5" maxWidth="300"
                  style="-fx-background-color: rgba(255, 255, 255, 0.3);
             -fx-background-radius: 10;
             -fx-border-radius: 10;
             -fx-border-color: #6C3483;
             -fx-padding: 5px;">

                <Region prefWidth="5"/>

                <ImageView fx:id="passwordIcon" fitHeight="27" fitWidth="27"/>

                <PasswordField fx:id="passwordField" promptText="Password"
                               maxWidth="260"
                               style="-fx-background-color: transparent;
                          -fx-border-color: transparent;
                          -fx-text-fill: #460E56;
                          -fx-prompt-text-fill: #460E56;
                          -fx-font-size: 16px;
                          -fx-padding: 10px;"/>
            </HBox>

            <Button text="Login" onAction="#handleLogin"
                    styleClass="choice-button"/>

            <Label fx:id="errorLabel" text=""
                   style="-fx-text-fill: #460E56; -fx-font-size: 16px;"/>
        </VBox>


        <HBox alignment="BOTTOM_LEFT"
              style="-fx-padding: 0 0 0 50px;">
            <Button text="Back to Welcome menu" onAction="#handleBack"
                    styleClass="back-button"/>
        </HBox>

    </VBox>

</AnchorPane>